{{ define "views/components/transaction-create-form.gohtml" }}
<div id="create-transaction-form">
    {{ range .Errors }}
        <p>{{ . }} </p>
    {{ end }}
    <form>
        <input type="number" name="amount" value="{{ index .Values "amount" }}"/>
        <select name="account_id">
            {{ range .Content.Accounts }}
            <option value="{{.Id}}">{{.Name}}</option>
            {{ end }}
        </select>
        <button hx-post="/transactions/create" hx-target="#create-transaction-form">Create</button>
    </form>
</div>
{{ end }}
